@using Models
@model AgentViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label"><strong>@Localizer["Name"] :</strong></label>
            <input asp-for="@Model.Name" class="form-control" maxlength="100" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label"><strong>@Localizer["Email"] :</strong></label>
            <input asp-for="@Model.Email" class="form-control" maxlength="100" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.PhoneExtension" class="form-label"><strong>@Localizer["Phone Extension"] :</strong></label>
            <input asp-for="@Model.PhoneExtension" class="form-control" maxlength="50" />
            <span asp-validation-for="@Model.PhoneExtension" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Status" class="form-label"><strong>@Localizer["Status"] :</strong></label>
            <select asp-for="@Model.Status" class="form-control" asp-items="@(dropdownService.GetDropdownFromConstants<Emite.CCM.Core.CCM.AgentStatus>())">
                <option value="">- Select Status -</option>
            </select>
            <span asp-validation-for="@Model.Status" class="text-danger"></span>
        </div>
    </div>
</div>
