@using Models
@model CustomerViewModel

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-1 row-cols-lg-1 row-cols-xl-1 row-cols-xxl-1">
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label"><strong>@Localizer["Name"] :</strong></label>
            <input asp-for="@Model.Name" class="form-control" maxlength="100" />
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.Email" class="form-label"><strong>@Localizer["Email"] :</strong></label>
            <input asp-for="@Model.Email" class="form-control" maxlength="100" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label"><strong>@Localizer["Phone Number"] :</strong></label>
            <input asp-for="@Model.PhoneNumber" class="form-control" maxlength="20" />
            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <label asp-for="@Model.LastContactDate" class="form-label"><strong>@Localizer["Last Contact Date"] :</strong></label>
            <input asp-for="@Model.LastContactDate" class="form-control" />
            <span asp-validation-for="@Model.LastContactDate" class="text-danger"></span>
        </div>
    </div>
</div>
